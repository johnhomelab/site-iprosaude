import { Payload } from 'payload'

export const seedHome = async (payload: Payload) => {
  const existing = await payload.find({
    collection: 'landing-pages',
    where: {
      slug: {
        equals: 'home',
      },
    },
  })

  if (existing.docs.length > 0) {
    console.log('Home já existe. Seed ignorado.')
    return
  }

  await payload.create({
    collection: 'landing-pages',
    data: {
      title: 'Home',
      slug: 'home',
      layout: [
        {
          blockType: 'heroGold',
          title: 'Implantes Dentários que Transformam Vidas',
          subtitle:
            'Recupere sua segurança ao sorrir com planejamento digital e resultados naturais.',
          ctaText: 'Agendar Avaliação',
          ctaLink: '#contato',
        },
        {
          blockType: 'beforeAfter',
          title: 'Resultados Reais. Mudanças Visíveis.',
        },
        {
          blockType: 'treatmentList',
          title: 'Especialidades que Geram Resultados',
          treatments: [
            { title: 'Implantes Dentários' },
            { title: 'Prótese Dentária' },
            { title: 'Facetas Estéticas' },
            { title: 'Tratamento de Canal' },
            { title: 'Aparelho Ortodôntico' },
            { title: 'Clareamento Dental' },
            { title: 'Cirurgias Complexas' },
            { title: 'Urgência 24h' },
          ],
        },
        {
          blockType: 'callToAction',
          title: 'Está com dor ou quer transformar seu sorriso?',
          text:
            'Fale agora com nossa equipe e agende sua avaliação. Atendimento rápido e humanizado.',
          buttonText: 'Falar no WhatsApp',
          buttonLink: '#whatsapp',
        },
      ],
    },
  })

  console.log('Home criada com sucesso.')
}
